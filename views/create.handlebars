
<h2>Create a New Meme</h2>

{{#if loggedIn}}
    <form action="/api/memes" method="POST">
        <label for="template">Choose a template:</label>
        <select id="template" name="templateId">
            {{#each templates}}
                <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>

        <label for="topText">Top Text:</label>
        <input type="text" id="topText" name="topText" required>

        <label for="bottomText">Bottom Text:</label>
        <input type="text" id="bottomText" name="bottomText" required>

        <button type="submit">Create Meme</button>
    </form>
{{else}}
    <p>You must be logged in to create a meme. Please <a href="/login">login</a>.</p>
{{/if}}
